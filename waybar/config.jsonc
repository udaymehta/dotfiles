{
  "layer": "top",
  // "height": 10,
  "position": "top",
  "spacing": 5,
  "modules-left": ["hyprland/workspaces", ],
  "modules-center": ["hyprland/window"],
  "modules-right": ["custom/powerprofile", "clock", "pulseaudio", "backlight", "custom/updates", "battery", "tray", "custom/powermenu"],
   "hyprland/workspaces": {
       "disable-scroll": true,
       "on-click": "activate",
       "all-outputs": true,
       "format": "{name}",
       "on-scroll-up": "hyprctl dispatch workspace m-1 > /dev/null",
       "on-scroll-down": "hyprctl dispatch workspace m+1 > /dev/null"
   },
   "custom/powermenu": {
      "format": "⏻",
      "on-click": "wlogout -b 1 -L 500 -R 500 -T 250 -B 500"
   },
  "hyprland/window": {
      "max-length": 50,
      "separate-outputs": true
  },
  "tray": {
      "icon-size": 13,
      "spacing": 5
  },
  "clock": {
        "format": "{:%d-%m-%y | %I:%M:%S %p}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "interval": 1
  },
  "battery": {
      "states": {
          "warning": 30,
          "critical": 15
      },
      "format": "{capacity}% {icon}",
      "format-charging": "{capacity}% 🗲",
      "format-plugged": "{capacity}% ",
      "format-alt": "{time} {icon}",
      "format-icons": ["󰁺", "󰁽", "󰁿", "󰂁", "󰁹"]
  },
  "battery#bat2": {
      "bat": "BAT2"
  },
  "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
   },
  "pulseaudio": {
      "format": "{volume}%{icon} {format_source}",
      "format-bluetooth": "{volume}% {icon} {format_source}",
      "format-bluetooth-muted": " {icon} {format_source}",
      "format-muted": " {format_source}",
      "format-source": "{volume}% ",
      "format-source-muted": " ",
      "format-icons": {
          "headphone": "󰋋 ",
          "hands-free": "󰋋 ",
          "headset": "󰋋 ",
          "phone": " ",
          "portable": " ",
          "car": " ",
          "default": [" ", " ", "  "]
      },
      "on-click": "pavucontrol",
      "max-volume": 150
  },
    "custom/powerprofile": {
        "format": " {}",
        "interval": 1,
        "exec": "powerprofilesctl get",
        "on-click": "~/dev/dotfiles/hypr/scripts/powerprofiles",
        "tooltip": false
    }
}
