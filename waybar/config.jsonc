      "separate-outputs": true
  },
  "tray": {
      "icon-size": 13,
      "spacing": 5
  },
  "clock": {
        "format": "{:%d-%m-%y | %I:%M:%S %p}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "interval": 1
  },
